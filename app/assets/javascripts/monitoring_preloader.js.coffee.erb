<%= require_joosy_preloader_for 'monitoring', preloader: 'inline', force: false %>

bootstrap = ->
  $('#preloader').remove()

  $.cookie.json = true
  I18n.locale = window.joosy.locale

  Joosy.Application.initialize 'monitoring','#application',
    environment: window.joosy.environment
    debug: false

window.onload = ->
  Preloader.load window.joosy.libraries,
    complete: bootstrap
    start: -> document.getElementById('preloader').style.display = 'block'
    progress: (percent) -> document.getElementById('percents').innerHTML = percent + '%'